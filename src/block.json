{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "dmg/read-more",
	"version": "1.0.0",
	"title": "DMG Read More",
	"category": "widgets",
	"icon": "smiley",
	"description": "Select published posts for DMG Read More links.",
	"example": {},
	"supports": {
		"html": false,
		"align": true,
		"customClassName": true
	},
	"textdomain": "dmg-read-more",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"usesContext": ["postId", "postType"],
	"attributes": {
		"selectedPostID": {
			"type": "integer",
			"default": 12
		},
		"selectedPostTitle": {
			"type": "string",
			"default": "Default Title"
		},
		"selectedPostURL": {
			"type": "string",
			"default": "http://local-dev.local/Default/"
		}
	}
}
